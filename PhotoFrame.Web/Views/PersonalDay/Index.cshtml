@model IEnumerable<PhotoFrame.Web.Models.PersonalDay>

@{
    ViewBag.Title = "Personal Days";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@
<div class="pfSiteContent">
    <div class="">
        <h4><strong>Manage @ViewBag.Title</strong></h4>
    </div>
    <div class="pfButton mediumButton">
        @Html.ActionLink("Add New", "Create")
    </div>
    <div class="">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstanceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OriginalYear)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstanceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OriginalYear)
                    </td>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <div class="pfButton smallButton">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    </div>
                                </td>
                                <td>
                                    <div class="pfButton smallButton">
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    </div>
                                </td>
                                <td>
                                    <div class="pfButton smallButton">
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
