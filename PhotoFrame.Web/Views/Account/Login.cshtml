@model PhotoFrame.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="pfSmallContent">
    <div class="">
        <section id="loginForm" class="containerCentered">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @*<h4>Use a local account to log in.</h4>*@
                @*<hr />*@
                @Html.ValidationSummary(true)
                @Html.Partial("_Brand")
                <div class="">
                    @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                    <div class="">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control pfLoginTextbox" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="">
                    @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control pfLoginTextbox" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>*@
                <div class="containerCentered pfButtton largeButton">
                    <input type="submit" value="Log in" class="pfLoginBtn" />
                </div>
                <div id="socialLogin">
                    <p>
                        @*@Html.ActionLink()*@
                    </p>
                    <p>

                    </p>
                </div>

            }
        </section>
    </div>
    <div class="">
        <section id="socialLoginForm" class="containerCentered">
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
    <hr />
    <div class="containerCentered loginHelp">
        @Html.ActionLink("Need help logging in?", "LoginHelp", "Links")
    </div>
    <div class="containerCentered pfButton largeButton inverted">
        @*<p>*@
        @Html.ActionLink("Sign Up for Free!", "Register")
        @*</p>*@
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}