@model PhotoFrame.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign Up for Free!";
}

<h2>@ViewBag.Title</h2>
<div class="pfSiteContent">
    <section id="registerForm" class="containerCentered">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @*<h4>Create a new account.</h4>*@
            @*<hr />*@
            @Html.ValidationSummary()
            <div class="">
                <p>
                    <img src="~/Content/Images/PFLogo.gif" />
                    <img src="~/Content/Images/PFBrand.gif" />
                </p>
            </div>
            <div class="">
                <p>
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control pfLoginTextbox" })
                    </div>
                </p>
            </div>
            <div class="">
                <p>
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control pfLoginTextbox" })
                    </div>
                </p>
            </div>
            <div class="">
                <p>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control pfLoginTextbox" })
                    </div>
                </p>
            </div>
            <div class="">
                <div class="largeButton">
                    <input type="submit" class="pfLoginBtn" value="Sign Up!" />
                </div>
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
